<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.CurrencyRate.CurrencyRateFragment">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="JOD,EGP,ILS"
            android:id="@+id/et_crr"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_enter_crr"
            android:text="enter currency"
            android:layout_below="@id/et_crr"/>

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:id="@+id/tv_usd"
            android:padding="22sp"
            android:textColor="@color/black"
            android:text="@string/from_usd" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rate"
            android:layout_below="@id/tv_usd"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="18dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="0.0"/>

    </RelativeLayout>

</layout>